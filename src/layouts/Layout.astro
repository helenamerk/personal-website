---
export interface Props {
  title?: string;
}

const { title = "Helena Merk" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Helena Merk - Building technology for systematic change that helps people and planet thrive." />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html {
    font-family: Georgia, serif;
    font-size: 16px;
    line-height: 1.6;
  }

  body {
    margin: 0;
    padding: 40px 20px;
    max-width: 600px;
    margin: 0 auto;
    color: #333;
    background: white;
  }

  h1 {
    font-size: 24px;
    font-weight: normal;
    margin: 0 0 20px 0;
    text-align: center;
  }

  h2 {
    font-size: 18px;
    font-weight: bold;
    margin: 30px 0 10px 0;
  }

  p {
    margin: 0 0 15px 0;
  }

  a {
    color: #0066cc;
    text-decoration: underline;
  }

  a:hover {
    text-decoration: none;
  }

  @media (max-width: 768px) {
    body {
      padding: 20px 15px;
    }
  }
</style>